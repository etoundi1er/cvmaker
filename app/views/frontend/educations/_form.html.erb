<td>
    <% if education.persisted? %>
        <div class="btn btn-sm btn-block btn-light mb-3 cursor-move js-move-handle">Drag me to reorder</div>
    <% end %>
    <%= form_for [education.cv_template, education], remote: true, html: { class: 'w-100' } do |f| %>
        <%= f.hidden_field :cv_template_id, value: education.cv_template_id %>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Courses</label>
            <div class="col-sm-10">
                <%= f.text_field :courses, autofocus: true, required: true, placeholder: 'example: MSc Software Engineering', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Academy</label>
            <div class="col-sm-10">
                <%= f.text_field :academy, required: true, placeholder: 'example: University of Yaoundé', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-10">
                <%= f.text_field :location, required: true, placeholder: 'example: Yaoundé, Cameroon', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Start Date</label>
            <div class="col-sm-10">
                <%= f.text_field :start_date, required: true, placeholder: 'example: 01.09.2010, or September 2010', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">End Date</label>
            <div class="col-sm-10">
                <%= f.text_field :end_date, placeholder: 'example: 01.09.2012, or September 2012', class: 'form-control' %>
                <small>Leave blank if you are still studying and don't know the end date.</small>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Summary</label>
            <div class="col-sm-10">
                <%= f.hidden_field :summary, id: "education_summary_#{education.id}" %>
                <trix-editor input="education_summary_<%= education.id %>"></trix-editor>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-sm-10">
                <%= f.submit 'Save', class: 'btn btn-sm btn-outline-secondary' %>
                <% if education.persisted? %>
                    <%= link_to 'Delete', cv_template_education_path(education.cv_template, education), remote: true, method: :delete, data: { confirm: 'Are you sure about deleting this?' }, class: 'btn btn-sm btn-outline-danger' %>
                <% end %>
            </div>
        </div>
    <% end %>
</td>
