<%= form_for image, html: { multipart: true, class: 'w-100' } do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control', accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Upload', class: 'btn btn-primary' %>
    </div>
<% end %>
