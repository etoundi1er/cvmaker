<div class="card cv-template">
    <div class="card-body">
        <h5 class="card-title"><%= link_to cv_template.title, edit_cv_template_path(cv_template) %></h5>
        <p class="card-text"><%= truncate cv_template.description, length: 150, omission: '...' %></p>
        <p class="card-text">
            <small class="text-muted">
                updated: <%= format_time cv_template.updated_at %><br>
                created: <%= format_time cv_template.created_at %>
            </small>
        </p>
        <%= link_to 'Preview', cv_template_preview_path(cv_template), class: 'btn btn-sm btn-outline-primary' %>
        <%= link_to 'Edit', edit_cv_template_path(cv_template), class: 'btn btn-sm btn-outline-primary' %>
    </div>
</div>
