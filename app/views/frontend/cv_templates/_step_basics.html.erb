<%= form_for @cv_template, html: { class: 'w-100' } do |f| %>
    <%= hidden_field_tag :step, 'basics' %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, value: @cv_template.title.presence || Time.zone.today.strftime("%B %Y CV"), autofocus: true, required: true, placeholder: "Example: #{Time.zone.today.strftime("%B %Y CV")}", class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 6, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Continue', class: 'btn btn-primary' %>
    </div>
<% end %>
